  "preload": false,
  "refresh": "30s",
  "schemaVersion": 42,
  "tags": [
    "alloy-health"
  ],
  "templating": {
    "list": [
      {
        "current": {
          "text": "grafanacloud-sommerfeldsebastan-prom",
          "value": "grafanacloud-prom"
        },
        "label": "Data Source",
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "regex": "(?!grafanacloud-usage|grafanacloud-ml-metrics).+",
        "type": "datasource"
      },
      {
        "current": {
          "text": "grafanacloud-sommerfeldsebastan-logs",
          "value": "grafanacloud-logs"
        },
        "label": "Loki Data Source",
        "name": "loki_datasource",
        "options": [],
        "query": "loki",
        "refresh": 1,
        "regex": "(?!grafanacloud.+usage-insights|grafanacloud.+alert-state-history).+",
        "type": "datasource"
      },
      {
        "allowCustomValue": false,
        "current": {
          "text": "",
          "value": ""
        },
        "datasource": "${datasource}",
        "definition": "label_values(alloy_component_controller_running_components,job)",
        "label": "Job",
        "name": "job",
        "options": [],
